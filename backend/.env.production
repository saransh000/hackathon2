# Environment Configuration
NODE_ENV=production
PORT=10000

# Database - MongoDB Atlas Connection String
# Get this from: https://cloud.mongodb.com
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/curemind?retryWrites=true&w=majority
DB_NAME=curemind

# JWT Secret - Generate a strong random string (64+ characters)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_use_random_64_chars
JWT_EXPIRES_IN=24h

# Frontend URL - Update with your Render frontend URL
FRONTEND_URL=https://your-frontend-name.onrender.com

# Admin Credentials - CHANGE THESE IN PRODUCTION
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=change_this_secure_password_123

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
